generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model EmotionVote {
  id           String   @id @default(cuid())
  emotion      Emotion
  day          String
  hour         Int
  identityHash String
  createdAt    DateTime @default(now())

  @@unique([identityHash, day])
}

model EmotionAggregate {
  id      String  @id @default(cuid())
  day     String
  hour    Int
  emotion Emotion
  count   Int     @default(0)

  @@unique([day, hour, emotion])
}

enum Emotion {
  happy
  content
  neutral
  stressed
  sad
  angry
}
